-- 
-- Note: colors given are simply a default, expect that they're overridden by
-- comand line options

Config {
-- font = "xft:DejaVu Vera Sans Mono-8"
 font = "xft:Consolas-8:style=bold"
-- font = "xft:Georgia:pixelsize=11"
       , bgColor      = "#000033"
       , fgColor      = "grey"
       , position     = BottomW L 90
       , lowerOnStart = True
       , commands     = [ Run StdinReader
			, Run Date "%a %b %_d %l:%M" "date" 10
			, Run Com "echo 'Mail: N/A'" [] "mail" 0
			, Run Com "echo 'Vol: muted'" [] "myVolume" 0
			, Run Com "echo 'pad: on'" [] "pad" 0
			]
       , sepChar      = "%"
       , alignSep     = "}{"
       , template     = " %StdinReader% }{ %pad% | %mail% | %myVolume% | %date%"
       }


